{
  "name": "kontrol-frontend",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:fast": "vite --host --open --force",
    "dev:debug": "vite --debug --host --open",
    "build": "tsc && vite build",
    "build:watch": "vite build --watch",
    "preview": "vite preview --host --open",
    "clean": "rm -rf node_modules/.vite dist",
    "fresh": "npm run clean && npm install && npm run dev:fast",
    "restart": "pkill -f vite && npm run dev:fast"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.15",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.15",
    "typescript": "^5.5.3",
    "vite": "^5.4.0"
  }
}
