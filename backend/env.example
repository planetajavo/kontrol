# KONTROL Backend Environment Variables
# Copia este archivo como .env y configura tus valores

# ============================================================================
# APLICACIÓN
# ============================================================================
DEBUG=true
ENVIRONMENT=development
LOG_LEVEL=DEBUG
LOG_FORMAT=json

# ============================================================================
# SUPABASE
# ============================================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ============================================================================
# BASE DE DATOS
# ============================================================================
DATABASE_URL=postgresql://postgres:password@localhost:5432/kontrol
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# ============================================================================
# REDIS
# ============================================================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# ============================================================================
# AUTENTICACIÓN
# ============================================================================
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================================
# APIS EXTERNAS
# ============================================================================
OPENAI_API_KEY=your-openai-api-key
COINGECKO_API_KEY=your-coingecko-api-key

# ============================================================================
# EXCHANGES APIs
# ============================================================================
BINANCE_API_URL=https://api.binance.com
COINBASE_API_URL=https://api.exchange.coinbase.com
KRAKEN_API_URL=https://api.kraken.com

# ============================================================================
# BLOCKCHAIN RPCs
# ============================================================================
ETHEREUM_RPC_URL=https://eth-mainnet.alchemyapi.io/v2/your-key
BITCOIN_RPC_URL=https://bitcoin-mainnet.alchemyapi.io/v2/your-key
POLYGON_RPC_URL=https://polygon-mainnet.alchemyapi.io/v2/your-key

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=100

# ============================================================================
# CELERY
# ============================================================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ============================================================================
# CORS
# ============================================================================
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]
CORS_ALLOW_CREDENTIALS=true

# ============================================================================
# MONITOREO
# ============================================================================
SENTRY_DSN=your-sentry-dsn
PROMETHEUS_ENABLED=true

# ============================================================================
# STORAGE
# ============================================================================
STORAGE_BUCKET=kontrol-documents
MAX_FILE_SIZE_MB=10

# ============================================================================
# MATCHING ENGINE
# ============================================================================
MATCHING_ENGINE_BATCH_SIZE=1000
MATCHING_ENGINE_TIME_WINDOW_SECONDS=90
MATCHING_ENGINE_CONFIDENCE_THRESHOLD=0.8

# ============================================================================
# TAX ENGINE
# ============================================================================
TAX_ENGINE_DEFAULT_METHOD=FIFO
TAX_ENGINE_SUPPORTED_JURISDICTIONS=["ES", "US", "DE", "FR", "IT", "GB", "NL", "BE", "AT", "CH"]

# ============================================================================
# AGENT CONFIGURATION
# ============================================================================
AGENT_MAX_TOKENS=4000
AGENT_TEMPERATURE=0.1
AGENT_MODEL=gpt-4

